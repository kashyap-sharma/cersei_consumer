<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#152A38"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#11222D"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relative"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/up"
            android:layout_alignParentRight="true"
            android:src="@drawable/down"
            android:padding="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:id="@+id/month"
            android:text="Month data"
            android:paddingLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:paddingTop="15dp"
            android:id="@+id/cashback"
            android:paddingBottom="15dp"
            android:layout_below="@+id/month"
            android:text="Month data"
            android:paddingLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:id="@+id/detail"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_below="@+id/cashback"
            android:text="Month data"
            android:paddingLeft="50dp"/>


    </RelativeLayout>
    <co.jlabs.cersei_retailer.DisplayConnectorView
        android:id="@+id/__leak_canary_row_connector"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

</FrameLayout>