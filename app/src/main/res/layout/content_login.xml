<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <co.jlabs.cersei_retailer.custom_components.TextViewModernM
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tell_us"
        android:gravity="center"
        android:id="@+id/tell"
        android:textColor="#fff"
        android:textSize="25sp"/>
    <co.jlabs.cersei_retailer.custom_components.TextViewModernM
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tell_us1"
        android:gravity="center"
        android:id="@+id/teel1"
        android:textColor="#fff"
        android:layout_below="@+id/tell"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:id="@+id/nameinputs"
        android:layout_below="@+id/teel1"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:hint="First Name"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColorHint="#fff"
            android:layout_height="wrap_content">
        <co.jlabs.cersei_retailer.custom_components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/fname"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Last Name"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColorHint="#fff"
            android:layout_height="wrap_content">
            <co.jlabs.cersei_retailer.custom_components.MEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/lname"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#ffffff"
                />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Email"
        android:padding="10dp"
        android:id="@+id/inputEmail"
        android:layout_below="@+id/nameinputs"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColorHint="#fff"
        android:layout_height="wrap_content">
        <co.jlabs.cersei_retailer.custom_components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/email"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Referral Code (Optional)"
        android:padding="10dp"
        android:id="@+id/inputr"
        android:layout_below="@+id/inputEmail"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColorHint="#fff"
        android:layout_height="wrap_content">
        <co.jlabs.cersei_retailer.custom_components.MEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/reff_code"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="#ffffff"
            />
    </android.support.design.widget.TextInputLayout>
    <co.jlabs.cersei_retailer.custom_components.ButtonModarno
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:background="#fff"
        android:layout_below="@+id/inputr"
        app:fontname="lb"
        android:id="@+id/regi_conf"
        android:text="Confirm"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"/>

</RelativeLayout>