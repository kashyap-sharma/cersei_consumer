<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="56dp">
    <co.jlabs.cersei_retailer.custom_components.MyImageView
        android:id="@+id/pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />
    <co.jlabs.cersei_retailer.custom_components.TextView_Black
        android:layout_toRightOf="@+id/pic"
        android:id="@+id/text"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingTop="6dp"
        android:text="yoyo"
        android:textSize="14sp" />
    <co.jlabs.cersei_retailer.custom_components.TextView_Black
        android:layout_toRightOf="@+id/pic"
        android:layout_below="@+id/text"
        android:paddingBottom="3dp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingTop="2dp"
        android:text="yoyo"
        android:id="@+id/desc"
        android:textSize="10sp"
        />
    <co.jlabs.cersei_retailer.custom_components.AddOrRemoveCart
        android:id="@+id/add_or_remove_cart"
        android:layout_width="wrap_content"

        android:layout_alignParentRight="true"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/text_price"
        android:paddingBottom="4dp"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test me"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88222222"/>
    <co.jlabs.cersei_retailer.custom_components.TextView_White
        android:id="@+id/deliverable"
        android:layout_marginLeft="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textStyle="bold"
        android:shadowRadius="2"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:text="@string/ico_myorder"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#c4c4c4"/>

</RelativeLayout>
