<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".SelectLocation">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:src="@drawable/thiscounts"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/login_window"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
                <co.jlabs.cersei_retailer.custom_components.TextViewModernM
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/send_conf"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    />
                <co.jlabs.cersei_retailer.custom_components.TextViewModernM
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="17sp"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="25dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp">

                        <co.jlabs.cersei_retailer.custom_components.TextViewModernM
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91"
                            android:textSize="17sp"
                            android:id="@+id/code"
                            android:textColor="#FFF"/>
                        <co.jlabs.cersei_retailer.custom_components.MEditText
                            android:layout_toRightOf="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            app:fontname="lb"
                            android:id="@+id/phone"
                            android:layout_marginLeft="5dp"
                            android:background="@android:color/transparent"
                            android:inputType="textNoSuggestions|phone"
                            android:layout_toLeftOf="@+id/que_but"
                            android:textColor="#fff"
                            />
                        <Button
                            android:layout_width="20dp"
                            android:textColor="#fff"
                            android:id="@+id/que_but"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/que_button"
                            android:layout_alignParentRight="true"
                            android:layout_height="20dp"
                            android:text="\?"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/bar"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:background="#f26522"
                 />

                <co.jlabs.cersei_retailer.custom_components.ButtonModarno
                    android:layout_width="match_parent"
                    android:textSize="19sp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:background="#fff"
                    app:fontname="lb"
                    android:id="@+id/send_code"
                    android:text="send code"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"/>

        </LinearLayout>
        <co.jlabs.cersei_retailer.custom_components.TextViewModernM
            android:id="@+id/select"
            android:layout_alignParentBottom="true"
            android:textSize="17sp"
            android:padding="15dp"
            app:fontname="lb"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Select Location"/>
</RelativeLayout>
